@model OMIstats.Models.Persona

@{
    ViewBag.Title = "Recuperar contraseña";
}

<h2 class="titulo">Recuperar contraseña</h2>

@if (ViewBag.errorPeticion)
{
    <div class="errorTextoRojo">
        En enlace que usaste es inválido o ya fue utilizado previamente.
    </div>
}
else
{
    <div>
        Tu contraseña se ha cambiado correctamente, estos son tus nuevos datos de acceso:
    </div>

    <br />
    <div>Usuario: @Html.DisplayFor(model => model.usuario)</div>

    <br />
    <div>Contraseña: @Html.DisplayFor(model => model.password)</div>
}