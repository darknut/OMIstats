<!DOCTYPE html>
<html>
<head>
    @if(ViewBag.production)
    {
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-13211684-2"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'UA-13211684-2');
    </script>
    }
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/general.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/cabecera.css" type="text/css" />
    <link rel="shortcut icon" href="http://www.olimpiadadeinformatica.org.mx/OMI/OMI.ico" type="image/ico" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("AddToHead", required: false)
</head>
<body class="mainpage">
    <img src="~/img/circulo.png" class="circulo" alt="logoOMI"/>
    <a href="http://www.olimpiadadeinformatica.org.mx/" target="_blank" class="logo">
        <img src="~/img/logo.png" alt="logoOMI"/>
    </a>

    <div class="maincontent">

    <div class="headerPagina">
    <div class="menu">

        <a class="boton" href="~/Olimpiadas">Olimpiadas</a>
        <a class="boton" href="~/Estados">Estados</a>
        <a class="boton" href="~/HallOfFame">Salón de la fama</a>
        @if (ViewBag.usuario != null && ViewBag.usuario.admin)
        {
            <a class="boton" href="~/Request/Manage">Admin</a>
        }
        <br />
        <div class="usuario">
            @if (ViewBag.usuario != null && ViewBag.usuario.clave > 0)
            {
                <span>
                    @if(ViewBag.usuario.genero[0] == 'F')
                    {
                        <span>Bienvenida</span>
                    }
                    else
                    {
                        <span>Bienvenido</span>
                    }
                    @Html.ActionLink((string)ViewBag.usuario.nombre, "view", "Profile", 
                                      new { usuario = (string)ViewBag.usuario.usuario }, 
                                      new { @class = "nombre" })
                </span>
                <div>@Html.ActionLink("Cerrar sesión", "Out", "Log")</div>
            }
            else
            {
                <div>@Html.ActionLink("Iniciar sesión", "Index", "Log")</div>
            }
        </div>
    </div>
    </div>

    <div class="content">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    <script src="~/js/general.js" ></script>
    @RenderSection("scripts", required: false)

    </div>
</body>
</html>
